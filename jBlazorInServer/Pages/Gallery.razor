@page "/gallery"

@using jBlazorInServer.Data
@inject ArtItemService ItemService


<h1>Gallery</h1>


<table class="table">
    <thead>
        <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Artist</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in items)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.Title</td>
                <td>@item.ArtistID</td>
                <td> <img src=@item.ImageURL alt="Sample Photo" class="thumbnail" /> </td>
            </tr>
        }
    </tbody>
</table>



@code {
    private ArtItem[] items;

    protected override async Task OnInitializedAsync()
    {
        items = await ItemService.GetArtitemsAsync();
    }
}
